<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Lookup</title>
    <link rel="stylesheet" href="styles/lookup.css">
</head>
<body>
    <h1>Lookup a Movie!</h1>
    <form id="lookup-form" name="lookup-form" action="lookup" method="POST">
          <label>
            Movie Name
            <input type="text" id="movie" name="movie" value="<%= data.movie %>"/>
          </label>
          <label>
            Genre
            <input type="text" id="genre" name="genre" value="<%= data.genre %>"/>
          </label>
          <label>
            Minimum Rating
            <input type="text" id="rating" name="rating" value="<%= data.rating%>"/>
          </label>
          <label>
            Sort by
            <select name="sort" id="sort" value="<%= data.sort %>">
                <option value="name">Name</option>
                <option value="rating">Rating</option>
                <option value="genre">Genre</option>
            </select>
          </label>
          <% if (errors) { %>
            <ul class="errors">
              <% errors.forEach((error) => { %>
              <li><%= error %></li>
              <% }); %>
            </ul>
            <% } %>
          <button type="submit" id="submit">Search</button>
    </form>
    <h2>Results:</h2>
    <ul>
        <% results.forEach(movie => { %>
          <li><%= movie.movie %> - <%= movie.genre %> - <%= movie.rating %></li>
        <% }); %>
      </ul>
</body>
</html>