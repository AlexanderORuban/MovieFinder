<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Recommendations</title>
  <link rel="stylesheet" href="styles/all-recommendations.css" />
</head>

<body>
  <h1>Movie Recommendations</h1>
  <div class="table-container">
    <table border="1">
      <thead>
        <tr>
          <th>Name</th>
          <th>Movie</th>
          <th>Genre</th>
          <th>Rating</th>
          <th>Why</th>
          <th>Recommendation Made on</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach(movie=> { %>
          <tr>
            <td>
              <%= movie.name %>
            </td>
            <td>
              <%= movie.movie %>
            </td>
            <td>
              <%= movie.genre %>
            </td>
            <td>
              <%= movie.rating %>
            </td>
            <td>
              <%= movie.why %>
            </td>
            <td>
              <%= movie.timestamp %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
  <div class="links">
    <a href="/" class="link-btn">
      Make a Recommendation </a>
    <a href="/lookup" class="link-btn">
      Lookup Movies </a>
    <a href="/recommendations" class="link-btn">
      Find Recommendations </a>
  </div>
</body>

</html>